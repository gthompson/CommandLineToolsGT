# some more ls aliases
alias ll='ls -lhF'
alias lc='ls -ChF'
alias la='ls -lAhF'
alias llx='ls -lXBhF'             # sort by extension
alias lls='ls -lShrhF'            # sort by size
alias llc='ls -lcrhF'                     # sort by change time
alias llu='ls -lurhF'                     # sort by access time
alias llr='ls -lR'              # recursive ls
alias llt='ls -ltrhF'             # sort by date

# Make it no matter what
alias mkdir="mkdir -p"

#alias top='top $TOP_OPTIONS'
#alias rcopy='rsync -az --stats --progress --delete'
alias trim_whitespace="sed -i 's/[ \t]*$//' "

# MOUNT CDROM
alias mountcd='sudo mount /dev/sr0 /cdrom'
